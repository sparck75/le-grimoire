# Database Configuration
DATABASE_URL=postgresql://grimoire:grimoire_password@localhost:5432/le_grimoire

# Application Secrets
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
NEXT_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id

# OCR Service
OCR_ENGINE=tesseract

# AI Recipe Extraction (NEW)
ENABLE_AI_EXTRACTION=false
AI_PROVIDER=openai
AI_FALLBACK_ENABLED=true

# OpenAI Configuration (for AI extraction)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=2000

# Google Gemini Configuration (optional, for future use)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# Grocery Store Scraper
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; LeGrimoire/1.0)
SCRAPER_RATE_LIMIT_SECONDS=2

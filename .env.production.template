# ==========================================
# PRODUCTION ENVIRONMENT - legrimoireonline.ca
# ==========================================
# 
# IMPORTANT: Remplacez toutes les valeurs par des valeurs sécurisées!
# Ne committez JAMAIS ce fichier avec les vraies valeurs!

# ===================
# PostgreSQL Database
# ===================
POSTGRES_USER=legrimoire_prod
POSTGRES_PASSWORD=CHANGEZ_MOI_POSTGRES_PASSWORD
POSTGRES_DB=le_grimoire

# ===================
# MongoDB Database
# ===================
MONGO_INITDB_ROOT_USERNAME=legrimoire
MONGO_INITDB_ROOT_PASSWORD=CHANGEZ_MOI_MONGODB_PASSWORD
MONGODB_URL=mongodb://legrimoire:CHANGEZ_MOI_MONGODB_PASSWORD@mongodb:27017/legrimoire?authSource=admin
MONGODB_DB_NAME=legrimoire

# ===================
# Application Secrets
# ===================
# Générez des clés sécurisées avec:
# python3 -c "import secrets; print(secrets.token_urlsafe(64))"
# OU
# openssl rand -base64 64

SECRET_KEY=GENERATE_A_RANDOM_SECRET_KEY_HERE
JWT_SECRET_KEY=GENERATE_A_RANDOM_JWT_SECRET_KEY_HERE

# ===================
# OAuth Configuration
# ===================
# Laissez vide si vous n'utilisez pas Google/Apple login
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_CLIENT_SECRET=

# ===================
# Redis Configuration
# ===================
REDIS_URL=redis://redis:6379

# ===================
# Frontend Configuration
# ===================
# URL publique de votre site (utilisée par le frontend)
NEXT_PUBLIC_API_URL=https://legrimoireonline.ca

# URL interne pour communication backend (container-to-container)
BACKEND_URL=http://backend:8000

# OAuth (même que ci-dessus)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
NEXT_PUBLIC_APPLE_CLIENT_ID=

# ===================
# OCR Service
# ===================
OCR_ENGINE=tesseract

# ===================
# Grocery Store Scraper
# ===================
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; LeGrimoire/1.0)
SCRAPER_RATE_LIMIT_SECONDS=2

# ===================
# Email Configuration (Optionnel)
# ===================
# Si vous voulez envoyer des emails (reset password, notifications, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@legrimoireonline.ca
SMTP_FROM_NAME=Le Grimoire

# ===================
# Sentry (Monitoring - Optionnel)
# ===================
# Pour le monitoring des erreurs en production
SENTRY_DSN=

# ===================
# Analytics (Optionnel)
# ===================
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_HOTJAR_ID=

# ===================
# Feature Flags
# ===================
ENABLE_REGISTRATION=true
ENABLE_PUBLIC_RECIPES=true
ENABLE_SHOPPING_LIST=true
ENABLE_OCR=true
ENABLE_SCRAPER=true

# ===================
# Production Settings
# ===================
NODE_ENV=production
PYTHON_ENV=production
DEBUG=false
LOG_LEVEL=info
